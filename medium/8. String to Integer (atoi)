ONE OF THE TRICKIEST QUESTION I CAME ACCROSS SO FAR. NOT VERY DIFFICULT BUT THERE ARE SO MANY SCENARIOS TO CONSIDER. FOR CONSIDERATION, THERE ARE 1082 TEST CASES.


class Solution {
    public int myAtoi(String s) {
        long l = 0;
        int sign = 1;
        int index = 0;
        
        s = s.trim();
        if(s.length()<1 || s==null){
            return 0;
        }
        
        if(s.charAt(0)=='-' || s.charAt(0)=='+'){
            if(s.charAt(0)=='-'){
                sign = -1;
            }
            index++;
        }
        
        if(s.length()==1 && index == 1){
            return 0;
        }
        
        int asciiVal = s.charAt(index);
        if(asciiVal < 48 || asciiVal > 57){
            return 0;
        }
        
        String s1 = "";
        int newIndex = index;
        for(int i = index; i<s.length(); i++){
            if(s.charAt(i) == '0'){
                newIndex++;
            }else{
                break;
            }
        }
        
        for(int i = newIndex; i<s.length(); i++){
            if((int)s.charAt(i)>47 &&(int)s.charAt(i)<58){
                s1 = s1 + s.charAt(i);
            }else{
                break;
            }
        }
        
        
        if(s1.length()>10){
            if(sign==1){
                return Integer.MAX_VALUE;
            }else{
                return Integer.MIN_VALUE;
            }
        }
        
        if(s1.length()<1 || s1==null){
            return 0;
        }
        
        l = Long.parseLong(s1);
        
        System.out.print(l*sign);
        
        if(l <= Integer.MAX_VALUE && l*sign >= Integer.MIN_VALUE){
            System.out.print("");
            int x = Integer.parseInt(s1)*sign;
            return x;
        }else if(sign==1){
            return Integer.MAX_VALUE;
        }else{
            return Integer.MIN_VALUE;
        }
        
    }
}


